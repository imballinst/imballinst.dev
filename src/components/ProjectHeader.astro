---
import { format } from 'date-fns';
import { Text } from '../components/Typography';
import { Link } from '../components/Links';

export interface Props {
  title: string;
  publishDate: string;
  author: string;
  githubLink: string;
}

const TEXT_COLOR = 'text-gray-600 dark:text-gray-400';

const { title, publishDate, author, githubLink } = Astro.props;
---

<header class="header">
  <Text as="h1" className="text-xl text-center my-0">{title}</Text>

  <div class="text-center my-0">
    <Link href={githubLink} disableUnderline className="inline-flex"
      >View on GitHub</Link
    >

    <Text as="span" colorScheme="gray" className="mx-2">&bull;</Text>

    <Text as="span" colorScheme="gray">
      Published at {format(new Date(publishDate), 'MMMM dd, yyyy, HH:mm O')}
    </Text>
  </div>
</header>

<style>
  .header {
    flex: 1;
  }
</style>
