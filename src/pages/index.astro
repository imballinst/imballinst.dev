---
import BaseLayout from '../layouts/BaseLayout.astro';
import { HOME_BREADCRUMBS } from '../helpers/paths';

let allPosts = Astro.fetchContent<MarkdownFrontmatter>('./posts/*.md');
allPosts = allPosts.sort(
  (a, b) =>
    new Date(b.publishDate).valueOf() - new Date(a.publishDate).valueOf()
);
---

<BaseLayout
  pages={HOME_BREADCRUMBS}
  title="Home"
  description="The home page of Try Ajitiono's personal site."
>
  <pre>
    {JSON.stringify(allPosts, null, 2)}
  </pre>
</BaseLayout>
