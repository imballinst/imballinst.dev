---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPostHeader from '../components/BlogPostHeader.astro';

import { Text } from '../components/Typography';
import { Link } from '../components/Links';
import { Button } from '../components/Button';
import { FeedbackModal } from '../components/Modal';
import { FeedbackIcon, EditIcon } from '../components/Icons';

const { content = {} } = Astro.props;
const {
  title,
  description,
  publishDate,
  author,
  image,
  imageAlt,
  imageCaption
} = content;

const editPage = `https://github.com/imballinst/peepohappy/edit/main/src/pages${Astro.request.url.pathname}.md`;
const slug = Astro.request.url.pathname;
---

<BaseLayout {title} {description} {image} currentMenu="/blog">
  <article class="content">
    <FeedbackModal {slug} client:only>test</FeedbackModal>

    <BlogPostHeader
      {image}
      {imageAlt}
      {imageCaption}
      {title}
      {author}
      {publishDate}
    />

    <div class="mt-4">
      <slot />
    </div>

    <hr class="border-gray-200 dark:border-gray-600 mt-6" />

    <Text
      as="div"
      className="flex flex-col justify-between sm:flex-row mt-6 p-2"
    >
      <Button
        className="-ml-2 text-teal-600 dark:text-teal-300"
        id="open-modal-btn"
      >
        <FeedbackIcon className="h-4 w-4" />

        <span class="inline-block ml-2">Send anonymous feedback</span>
      </Button>

      <Link
        href={editPage}
        className="flex flex-row items-center ml-1"
        isExternal
        hideExternalIcon
      >
        <EditIcon className="h-4 w-4" />

        <span class="ml-2">Edit this post</span>
      </Link>
    </Text>
  </article>
</BaseLayout>

<script>
  const btn = document.getElementById('open-modal-btn');

  if (btn) {
    btn.addEventListener('click', () => {
      const evt = new Event('openmodal');
      window.dispatchEvent(evt);
    });
  }
</script>

<style>
  .content {
    display: flex;
    flex-direction: column;
  }
</style>
