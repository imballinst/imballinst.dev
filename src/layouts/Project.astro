---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectHeader from '../components/ProjectHeader.astro';

const { content = {} } = Astro.props;
const { title, description, publishDate, githubLink, author } = content;
---

<BaseLayout {title} {description} currentMenu="/projects">
  <article class="project">
    <ProjectHeader {title} {author} {publishDate} {githubLink} />

    <div class="mt-4">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .project {
    display: flex;
    flex-direction: column;
  }
</style>
